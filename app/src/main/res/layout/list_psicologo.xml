<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <ImageView
        android:id="@+id/card_img_psicologo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@color/rosa_claro"
        />

    <TextView
        android:id="@+id/card_nome_psicologo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome psicologo"
        app:layout_constraintStart_toEndOf="@id/card_img_psicologo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/card_crp_psicologo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRP: 11/111111"
        app:layout_constraintStart_toEndOf="@id/card_img_psicologo"
        app:layout_constraintTop_toBottomOf="@id/card_nome_psicologo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>